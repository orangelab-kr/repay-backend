{
  "name": "repay-backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "repository": "https://github.com/orangelab-kr/repay-backend.git",
  "author": "bakjonghun <bakjonghun@hikick.kr>",
  "license": "MIT",
  "scripts": {
    "serve": "yarn serve:dev",
    "serve:dev": "cross-env NODE_ENV=dev npx serverless offline --stage dev",
    "serve:stage": "cross-env NODE_ENV=stage npx serverless offline --stage stage",
    "serve:prod": "cross-env NODE_ENV=prod npx serverless offline --stage prod",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "deploy": "yarn deploy:prod",
    "deploy:prod": "npx serverless deploy --stage prod",
    "deploy:stage": "npx serverless deploy --stage stage",
    "deploy:dev": "npx serverless deploy --stage dev"
  },
  "dependencies": {
    "@slack/webhook": "^6.0.0",
    "cross-env": "^7.0.2",
    "dayjs": "^1.10.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "firebase-admin": "^9.6.0",
    "iamport": "^0.3.4",
    "morgan": "^1.10.0",
    "serverless-http": "^2.7.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/eslint": "^7.2.5",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/express": "^4.17.11",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.9",
    "@types/prettier": "^2.1.5",
    "@types/serverless": "^1.78.20",
    "@types/webpack-node-externals": "^2.5.0",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.2.0",
    "serverless": "^2.21.1",
    "serverless-dotenv-plugin": "^3.9.0",
    "serverless-offline": "^6.8.0",
    "serverless-webpack": "^5.3.5",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webpack": "^5.19.0",
    "webpack-node-externals": "^2.5.2"
  }
}
